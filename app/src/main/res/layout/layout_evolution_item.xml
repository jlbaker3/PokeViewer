<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPostEvolution"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwEvolvesTo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvwPreEvolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewPreInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPreEvolution" />

    <TextView
        android:id="@+id/tvwPostEvolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewPostInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPostEvolution" />

    <TextView
        android:id="@+id/tvwEvolvesTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Evolves Into"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgDownArrow"
        app:layout_constraintTop_toBottomOf="@+id/imgPreEvolution"
        app:layout_constraintWidth_max="wrap" />

    <ImageView
        android:id="@+id/imgPreEvolution"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:background="#FD0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewPostInfo" />

    <Button
        android:id="@+id/btnViewPreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pokemon"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPreEvolution"
        app:layout_constraintStart_toStartOf="@+id/tvwPreEvolution" />

    <Button
        android:id="@+id/btnViewPostInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pokemon"
        app:layout_constraintBottom_toBottomOf="@+id/imgPostEvolution"
        app:layout_constraintStart_toStartOf="@+id/tvwPostEvolution" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvwEvolvesTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvwEvolvesTo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvwEvolvesTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvwEvolvesTo" />

    <ImageView
        android:id="@+id/imgDownArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tvwPostEvolution"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/btnViewPreInfo"
        app:srcCompat="@drawable/down_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>